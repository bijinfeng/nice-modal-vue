{
	"name": "@pingtou/nice-modal-vue",
	"version": "0.0.1",
	"description": "Utility library that converts Vue.js modal components into a Promise-based API.",
	"type": "module",
	"license": "MIT",
	"packageManager": "pnpm@10.17.0",
	"homepage": "https://github.com/bijinfeng/nice-modal-vue#readme",
	"bugs": {
		"url": "https://github.com/bijinfeng/nice-modal-vue/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bijinfeng/nice-modal-vue.git"
	},
	"author": "bijinfeng <bijinfeng1016@gmail.com>",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"release": "bumpp && npm publish",
		"prepare": "simple-git-hooks"
	},
	"peerDependencies": {
		"vue": ">=3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/node": "^22.15.17",
		"bumpp": "^10.1.0",
		"lint-staged": "^16.1.6",
		"simple-git-hooks": "^2.13.1",
		"tsdown": "^0.11.9",
		"typescript": "^5.8.3",
		"vitest": "^3.1.3",
		"vue": "^3.5.21"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": "npx @biomejs/biome check --write --no-errors-on-unmatched --files-ignore-unknown=true --colors=off"
	}
}
